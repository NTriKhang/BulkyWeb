@model IEnumerable<Product>;

	<div class="row">
			<style>
			.geeks {
				width:60%;
				height:300px;
			}
			img {
				width:100%;
				height:100%;
			}
		</style>
	@foreach (var item in Model)
	{
		string srcImage = item.UrlImage;
				<div class="col-lg-3 col-md-6 border-3 border-secondary h-100">
					<div class="row p-2">
							<div class="card geeks col-8">
								<img src="@srcImage"/>
							</div>
							<div class="form-text col-4">
									<p class="text-primary card-title p-2">@item.Title</p>
										<p class="text-info card-title p-2">@item.Category.Name</p>
										<p class="text-info card-title p-2">@item.Author</p>
									<p class="text-center text-bg-light">List price: @(item.ListPrice.ToString()).000vnd</p>
							</div>
					</div>
					<div class="bg-primary text-light text-center">
						<a class="text-light" style="text-decoration:none"  asp-action="Detail" asp-controller="Home" asp-route-productId="@item.Id" >Detail</a>
					</div>
				</div>
	}
</div>
