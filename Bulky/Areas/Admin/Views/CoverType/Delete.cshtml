@model CoverType
<form method="post" class="form-control">
	<input hidden asp-for="@Model.Id" />
	<div>
		<h2>delete Cover Type</h2>
	</div>
	<hr />
	<div class="table table-bordered border-2">
		<div class="p-2">
			<label asp-for="@Model.Name" class="col-1">Name</label>
			<input disabled placeholder="" asp-for="@Model.Name" class="border border-2"/> <br />
			<span asp-validation-for="@Model.Name" class="text-danger"></span>
		</div>
		
		<div>
			<button type="submit" asp-controller="CoverType" asp-action="Delete" class="btn mt-3 btn-danger">Delete</button>
		</div>
	</div>
</form>