@model CoverType
<form method="post" class="form-control">
	<div>
		<h2>Edit Cover Type</h2>
	</div>
	<hr />
	<div class="table table-bordered border-2">
		<div class="p-2">
			<label asp-for="@Model.Name" class="col-1">Name</label>
			<input placeholder="Name Category" asp-for="@Model.Name" class="border border-2"/> <br />
			<span asp-validation-for="@Model.Name" class="text-danger"></span>
		</div>
		<div>
			<button type="submit" asp-controller="Category" asp-action="Edit" class="btn btn-secondary mt-3">Update</button>
		</div>
	</div>
</form>