@model List<CoverType> 
<div>
        <div class="row mt-4 p-3">
            <h2 class="col-10">Cover Type</h2>
            <a asp-controller="CoverType" asp-action="Create" class="col-2">
                 <abbr class="btn btn-primary">Create new</abbr>
            </a>
        </div>
        <div>
            <table class="table table-bordered border-2">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                </tr>
                
                @{
                    foreach(var item in Model){
                                        <tr>
                                            <td>
                                                @item.Id
                                            </td>
                                            <td>
                                                @item.Name
                                            </td>
                                            
                                            <td>
                                                <a class="btn btn-secondary" asp-controller="CoverType" asp-action="Edit" asp-route-id="@item.Id" >Edit</a>
                                            </td>
                                            <td>
                                                <a class="btn btn-danger" asp-controller="CoverType" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                            </td>
                                        </tr>
                    }
                }
            </table>
        </div>
</div>